<div class="hide " id="Parts">
  <div class="card">
    <div class="card-header">
      <h2>Parts page</h2>

    </div>
    <div class="card-body">
      <a href="parts/create" class="btn btn-primary" id="add-Part-btn">
        Add new Part
      </a>
    </div>
  </div>
  <div class="card">
    <div class="card-header card-header-primary">
      Parts table <br>
      There are {{parts.length}} Parts
    </div>
    <div class="card-body">
      <div>
        <table class="table" id="md">
          <thead>
            <tr>
              <th scope="col">Part Name</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>

            {{#each parts}}
            <tr>

              <td>{{this.name}}</td>
              <td class="text-center">
                <a class="bg-white text-danger mr-3" style="border-radius:100% !important" href="#">
                  <i class="material-icons">close</i>
                </a>
                <a class="bg-white text-success" style="border-radius:100% !important" href="parts/{{this.id}}/edit">
                  <i class="material-icons">edit</i>
                </a>
              </td>
            </tr>
            {{/each}}

          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>



{{#section 'scripts'}}


<script>
  $(document).ready(function () {
    $('#md').DataTable({
      processing: true,

    });
  });
</script>


{{/section}}