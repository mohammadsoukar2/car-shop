<div id="Cars">
  <div class="card">
    <div class="card-header">
      <h2>Cars page</h2>

    </div>
    <div class="card-body">
      {{#if user.hasAgency}}
      <a href="{{baseUrl}}/dashboard/cars/create" class="btn btn-primary" id="add-Car-btn">
        Add new Car
      </a>
      {{/if}}
    </div>
  </div>
  <div class="card">
    <div class="card-header card-header-primary">
      Cars table <br>
      There are {{cars.length}} cars
    </div>
    <div class="card-body">
      <div>
        <table class="table" id="md">
          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">agency</th>
              <th scope="col">color</th>
              <th scope="col">doors</th>
              <th scope="col">price</th>
              <th scope="col">year</th>

              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>

            {{#each cars}}
            <tr>
              <td>

                <img src="{{firstImage this.images}}" style="width:50px;height:50px;">
                {{this.make}} {{this.model_name}}
                
              </td>
              <td>{{this.agency_name}}</td>
              <td>{{this.color}}</td>
              <td>{{this.doors}}</td>
              <td>{{this.price}}</td>
              <td>{{this.year}}</td>
              <td class="text-center">
                <form action="{{baseUrl}}/dashboard/cars/{{this.id}}/destroy" method="post" style="display: inline">
                  <button class="bg-white text-danger mr-3" style="border:white !important;cursor:pointer;outline:none">
                    <i class="material-icons">close</i>
                  </button>
                </form>
                <a class="bg-white text-success" style="border-radius:100% !important;cursor:pointer;outline:none" href="{{baseUrl}}/dashboard/cars/{{this.id}}/edit">
                  <i class="material-icons">edit</i>
                </a>
              </td>
            </tr>
            {{/each}}

          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>



{{#section 'scripts'}}


<script>
  $(document).ready(function () {
    $('#md').DataTable({
      processing: true,

    });
  });
</script>


{{/section}}